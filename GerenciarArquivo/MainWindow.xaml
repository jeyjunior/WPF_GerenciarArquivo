<Window x:Class="GerenciarArquivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GerenciarArquivo"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Background="{DynamicResource Cinza10}"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="500" Width="450" MinWidth="350" MinHeight="400">

    <Grid x:Name="RootGrid" Margin="18" >
        <Grid.RowDefinitions>
            <RowDefinition  Height="48"/>
            <RowDefinition  Height="*"/>
            <RowDefinition  Height="Auto"/>
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ORIGEM -->
        <Grid Grid.Row="0" Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnSelecionarPastaOrigem" 
                    Grid.Column="0" 
                    Content="Selecionar Pasta" 
                    Style="{StaticResource FlatButton}"/>
            
            <Button x:Name="btnAddArquivo" 
                    Grid.Column="2" 
                    Content="Selecionar Arquivos" 
                    Style="{StaticResource FlatButton}"/>
        </Grid>

        <Border Grid.Row="1" Padding="0" Background="{StaticResource Cinza9}" CornerRadius="8,8,0,0" BorderThickness="0">
            
            <ListView Grid.Row="1" 
                      Margin="0"
                      Padding="0"
                      ItemsSource="{Binding Items}" 
                      Style="{StaticResource DefaultListViewStyle}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Teste Teste Teste Teste"
                                       Style="{StaticResource TextBlockDefault_14}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                                <Button Grid.Column="1" Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                                    <TextBlock Style="{StaticResource TextBlockToIcon}" FontSize="12" Text="&#xE894;"/>
                                </Button>

                                <Button Grid.Column="1" Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                                    <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xED25;"/>
                                </Button>
                                
                                <Button Grid.Column="1" Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                                    <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xE8C8;"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <Border Grid.Row="2" Padding="12,0" Margin="0,0,0,12" Background="{StaticResource Cinza11}" CornerRadius="0,0,8,8" BorderThickness="0">
            <Grid Grid.Row="2" Margin="0,8" Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="123" Style="{StaticResource TextBlockDefault_12}"/>
            
                <Button Grid.Column="1" Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                    <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xE74D;"/>
                </Button>
                <Button Grid.Column="3" Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                    <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xE8C8;"/>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="3" Padding="12,0" Background="{StaticResource Cinza9}" CornerRadius="8" BorderThickness="0">
            <!-- DESTINO -->
            <StackPanel Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                 Margin="0,12,0,0">

                <!-- CheckBox Nome Padrão -->
                <CheckBox Content="Nome Padrão:" Style="{StaticResource CheckBox14}" Margin="0,0,0,2"/>

                <!-- TextBox para o nome padrão -->
                <TextBox Text="ASD ASD ASD  ASDASD ASD" Style="{StaticResource TextBox12}"/>

                <!-- ComboBox de Destinos -->
                <StackPanel Orientation="Vertical" Margin="0,12,0,8">
                    <TextBlock Text="Destino dos arquivos:" Style="{StaticResource TextBlockDefault_14}" Margin="0,0,0,2"/>

                    <ComboBox Style="{StaticResource SimpleComboBoxStyle}"
                              ItemsSource="{Binding CaminhosDestino}"
                              MaxDropDownHeight="200"
                              SelectedItem="{Binding CaminhoDestinoSelecionado}"
                              Margin="0,0,0,8"/>
                    <!-- Botões de gerenciamento -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                            <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xE75C;"/>
                        </Button>

                        <Border Width="8"/>

                        <Button Style="{StaticResource FlatButtonNoBackgroundToIcon}" Width="32" Height="32">
                            <TextBlock Style="{StaticResource TextBlockToIcon}" Text="&#xE710;"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
